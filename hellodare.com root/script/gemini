@media (max-width: 768px) { /* Adjust breakpoint as needed */

    .page-container {
      flex-direction: column; /* Stack columns */
    }
  
    /* --- Columns Adjustments --- */
    .left-column,
    .right-column,
    .middle-column {
      flex: none; /* Remove flex sizing */
      width: 100%; /* Full width */
      height: auto; /* Height determined by content or flex-grow */
      padding: 15px; /* Consistent mobile padding */
    }
  
    .left-column { order: 1; text-align: center; flex-shrink: 0; }
    .middle-column { order: 2; flex-grow: 1; /* Fill remaining space */ padding: 0; /* Remove padding if track fills it */ }
    .right-column { order: 3; text-align: center; flex-shrink: 0; }
  
    /* --- Video Item Padding (via Wrapper Width) --- */
    .scroll-item .video-aspect-wrapper {
        width: 90%; /* Creates 5% padding on each side */
        /* border-radius adjustment? */
        /* border-radius: 10px; */ /* Example */
    }
  
    /* --- Info Section Content Padding --- */
    .info-section {
        /* Inherits display:flex from base */
        padding: 25px 0; /* Adjust vertical padding, remove horizontal */
    }
  
    .info-content {
        /* Center content using width within flex parent */
        width: 90%; /* <<< Match video wrapper width */
        max-width: 100%; /* Allow it to use 90% */
        /* padding: 10px 0; */ /* Add internal vertical padding if needed */
    }
  
    /* Optional: Mobile text size adjustments */
    .info-content h2 { font-size: 1.4em; }
    .info-content p { font-size: 0.95em; line-height: 1.5; }
  
  
    /* Optional: Mobile Controls/Overlay Adjustments */
    .video-controls { bottom: 10px; padding: 5px 10px; gap: 8px; }
    .controls-button { padding: 4px 8px; font-size: 0.8em; }
    .video-info-overlay { bottom: 10px; left: 10px; padding: 6px 10px; }
    .video-info-overlay .video-info-title { font-size: 0.9em; }
    .video-info-overlay .video-info-year { font-size: 0.75em; }
  
  } /* === END of @media query === */